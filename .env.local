# LocalStack Environment Configuration
# Copy this file to .env and modify as needed for local development

# AWS Configuration (dummy values for LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=ap-southeast-1

# LocalStack Endpoint
LOCALSTACK_ENDPOINT=http://localhost:4566

# DynamoDB Table Names (local stage)
THING_TABLE=thing-table-local
LOCATION_TABLE=location-table-local
LAND_TABLE=land-table-local

# SNS Topic ARN (constructed for LocalStack)
THING_TOPIC_ARN=arn:aws:sns:ap-southeast-1:000000000000:thing-topic-local

# Step Functions State Machine ARN
MESSAGE_DELAYER_ARN=arn:aws:states:ap-southeast-1:000000000000:stateMachine:message-delayer-local

# Auth Configuration (local development)
USERS_TABLE=users-local
API_KEYS_TABLE=api-keys-local
JWT_SECRET=dev-secret-key
GOOGLE_CLIENT_ID=

# Application Stage
STAGE=local

# Disable Datadog tracing for local development
DD_TRACE_ENABLED=false
